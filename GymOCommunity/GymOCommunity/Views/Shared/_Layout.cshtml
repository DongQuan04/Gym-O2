<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymOCommunity</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymOCommunity.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <<button id="themeToggle" class="btn btn-outline-light">
                <span id="themeIcon">🌙</span>
            </button>

            </button>

            <div class="container">
                <a class="navbar-brand d-flex align-items-center" href="#">
                    <img src="~/images/logo.png" alt="Gym-O Community" width="40" height="40" class="me-2">
                    <a href="@Url.Action("Index", "Home")" class="fw-bold text-primary">Gym-O Community</a>                    
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Trang chủ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Diễn đàn</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://www.rophim.me/xem-phim/an-danh.lhA6n4Pu?ver=1&ss=2&ep=9">Bài tập Gym</a>
                        </li>
                    </ul>
                    <<div class="ms-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <span class="navbar-text text-light me-2">Xin chào, @User.Identity.Name!</span>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                <button type="submit" class="btn btn-outline-danger">Đăng xuất</button>
                            </form>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" class="btn btn-outline-primary me-2">Đăng nhập</a>
                            <a href="/Identity/Account/Register" class="btn btn-danger">Đăng ký</a>
                        }
                    </div>
                    </div>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GymOCommunity - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <footer class="fade-in text-center">
        <p>&copy; 2025 Gym-O Community. All rights reserved.</p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



