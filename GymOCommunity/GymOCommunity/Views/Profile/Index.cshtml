@model GymOCommunity.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = $"Trang cá nhân - {Model.User.UserName}";
}

<div class="container py-4">
    <div class="card mb-4 shadow-sm">
        <div class="card-body text-center">
            <h2 class="card-title">@Model.User.UserName</h2>
            <p class="text-muted">Thành viên từ @Model.User.Email</p>
        </div>
    </div>

    <h4 class="mb-3">Bài viết đã chia sẻ (@Model.Posts.Count)</h4>

    @if (Model.Posts.Any())
    {
        <div class="row">
            @foreach (var post in Model.Posts)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        @if (!string.IsNullOrEmpty(post.ImageUrl))
                        {
                            <img src="@post.ImageUrl" class="card-img-top" alt="Ảnh bài viết" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@post.Title</h5>
                            <p class="card-text">@post.Content</p>
                            <small class="text-muted">@post.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("Details", "Posts", new { id = post.Id })" class="btn btn-sm btn-outline-primary">
                                Xem chi tiết
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            Người dùng này chưa có bài viết nào.
        </div>
    }
</div>